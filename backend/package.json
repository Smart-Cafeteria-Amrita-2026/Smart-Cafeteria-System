{
	"name": "smart-cafeteria-management-backend",
	"version": "1.0.0",
	"description": "This is the Backend codebase of the Smart Cafeteria Management System",
	"main": "index.js",
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "node dist/index.js",
		"dev": "nodemon src/index.js",
		"lint": "biome lint .",
		"check": "biome check .",
		"type-check": "tsc --noEmit",
		"pre-commit": "lint-staged",
		"fix": "biome check --write .",
		"test": "jest",
		"test:config": "jest __tests__/config --maxWorkers=1",
		"test:controllers": "jest __tests__/controllers --maxWorkers=1",
		"test:interfaces": "jest __tests__/interfaces --maxWorkers=1",
		"test:services": "jest __tests__/services --maxWorkers=1",
		"test:types": "jest __tests__/interfaces --maxWorkers=1",
		"test:routes": "jest __tests__/routes --maxWorkers=1",
		"test:validations": "jest __tests__/validations --maxWorkers=1",
		"test:all": "jest --maxWorkers=1",
		"test:quick": "jest --testNamePattern=\"Basic\" --testPathIgnorePatterns=node_modules",
		"test:basic": "jest --testPathPattern='(types|config|routes|controllers|services)'"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.12.4",
	"dependencies": {
		"@supabase/supabase-js": "^2.90.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"stripe": "^20.3.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@jest/globals": "^30.2.0",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.1.0",
		"@types/supertest": "^6.0.3",
		"jest": "^30.2.0",
		"jest-mock-extended": "^4.0.0",
		"lint-staged": "^16.2.7",
		"nodemon": "^3.1.11",
		"rimraf": "^6.1.2",
		"supertest": "^7.2.2",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
