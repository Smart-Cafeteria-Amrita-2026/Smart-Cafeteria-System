{
	"name": "smart-cafeteria-management-backend",
	"version": "1.0.0",
	"description": "This is the Backend codebase of the Smart Cafeteria Management System",
	"main": "index.js",
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "node dist/index.js",
		"dev": "nodemon src/index.js",
		"lint": "biome lint .",
		"check": "biome check .",
		"type-check": "tsc --noEmit",
		"pre-commit": "lint-staged",
		"fix": "biome check --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.12.4",
	"dependencies": {
		"@supabase/supabase-js": "^2.90.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"stripe": "^20.3.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.9",
		"lint-staged": "^16.2.7",
		"nodemon": "^3.1.11",
		"rimraf": "^6.1.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
